<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:elevation="8dp"
        android:src="@drawable/baseline_person_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_card"
        app:layout_constraintStart_toStartOf="@+id/recycler_card"
        app:layout_constraintTop_toTopOf="@+id/recycler_card" />

    <TextView
        android:id="@+id/recycler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/recycler_image"
        app:layout_constraintTop_toTopOf="@id/recycler_card" />

    <TextView
        android:id="@+id/recycler_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="16:40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/recycler_card"
        app:layout_constraintStart_toEndOf="@+id/recycler_name"
        app:layout_constraintTop_toTopOf="@+id/recycler_card" />

    <ImageView
        android:id="@+id/recycler_address_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toEndOf="@id/recycler_image"
        app:layout_constraintTop_toBottomOf="@+id/recycler_name" />

    <TextView
        android:id="@+id/recycler_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:maxLength="35"
        android:maxLines="2"
        android:text="Shuisong building,Tairan 9th road,Futian,Shenzhen"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/recycler_address_image"
        app:layout_constraintTop_toBottomOf="@+id/recycler_name" />

    <View
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="@id/recycler_image"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <ImageView
        android:id="@+id/recycler_battery_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:src="@drawable/baseline_battery_std_24"
        app:layout_constraintStart_toStartOf="@id/recycler_image"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <TextView
        android:id="@+id/recycler_battery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="90%"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/recycler_battery_image"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <ImageView
        android:id="@+id/recycler_send_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:src="@drawable/send"
        app:layout_constraintStart_toEndOf="@id/recycler_battery_text"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <TextView
        android:id="@+id/recycler_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="223M%"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/recycler_send_image"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <ImageView
        android:id="@+id/recycler_WiFi_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:src="@drawable/wifi"
        app:layout_constraintStart_toEndOf="@id/recycler_send_text"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <TextView
        android:id="@+id/recycler_WiFi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:text="WiFi%"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/recycler_WiFi_image"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

    <ImageView
        android:id="@+id/recycler_call_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:src="@drawable/baseline_call_24"
        app:layout_constraintStart_toEndOf="@id/recycler_WiFi_text"
        app:layout_constraintTop_toBottomOf="@id/recycler_image" />

</androidx.constraintlayout.widget.ConstraintLayout>