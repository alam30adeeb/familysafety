<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@+id/recycler_card"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_card"
        app:layout_constraintStart_toStartOf="@+id/recycler_card"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_person_outline_24"
        android:elevation="8dp"/>
    <TextView
        android:id="@+id/recycler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="32sp"
        android:elevation="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/recycler_image"
        app:layout_constraintTop_toTopOf="@id/recycler_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>